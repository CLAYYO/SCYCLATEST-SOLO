// Committee structure
const committees = [
  {
    name: 'General Committee',
    description: 'The main governing body responsible for overall club management and strategic decisions.',
    members: ['All Officers', 'Elected Committee Members', 'Co-opted Specialists'],
    meetings: 'Monthly',
    responsibilities: ['Strategic planning', 'Policy development', 'Budget approval', 'Major decisions']
  },
  {
    name: 'Racing Committee',
    description: 'Manages all racing activities, regattas, and competitive sailing events.',
    members: ['Sailing Secretary (Chair)', 'Race Officers', 'Class Representatives', 'Safety Officer'],
    meetings: 'Bi-weekly during season',
    responsibilities: ['Race program planning', 'Regatta organization', 'Racing rules and procedures', 'Safety protocols']
  },
  {
    name: 'House Committee',
    description: 'Oversees clubhouse operations, facilities, and member amenities.',
    members: ['Rear Commodore (Chair)', 'Bar Manager', 'Catering Manager', 'Facilities Coordinator'],
    meetings: 'Monthly',
    responsibilities: ['Clubhouse management', 'Catering services', 'Bar operations', 'Event coordination']
  },
  {
    name: 'Marina Committee',
    description: 'Manages marina operations, berthing, and marine services.',
    members: ['Marina Manager (Chair)', 'Harbour Master', 'Maintenance Team', 'Security Coordinator'],
