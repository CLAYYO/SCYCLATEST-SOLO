---
import Layout from '../layouts/Layout.astro';

// Contact information
const contactInfo = {
  address: {
    name: 'South Caernarvonshire Yacht Club',
    street: 'Abersoch, Pwllheli',
    city: 'Gwynedd, Wales',
    postcode: 'LL53 7EB',
    coordinates: '52°49.43\'N, 04°269.89\'W'
  },
  phone: '+44 (0) 1758 712338',
  email: 'info@scyc.co.uk',
  office_hours: 'Monday - Friday: 9:00 - 17:00',
  emergency: '+44 (0) 1758 712999'
};

// Department contacts
const departments = [
  {
    name: 'General Enquiries',
    email: 'info@scyc.co.uk',
    description: 'General club information and membership enquiries'
  },
  {
    name: 'Membership',
    email: 'membership@scyc.co.uk',
    description: 'Membership applications and member services'
  },
  {
    name: 'Racing',
    email: 'racing@scyc.co.uk',
    description: 'Race entries, results, and sailing competitions'
  },
  {
    name: 'Events',
    email: 'events@scyc.co.uk',
    description: 'Social events, functions, and private hire'
  },
  {
    name: 'The Cove Restaurant',
    email: 'restaurant@scyc.co.uk',
    description: 'Restaurant reservations and catering enquiries'
  },
  {
    name: 'Training',
    email: 'training@scyc.co.uk',
    description: 'RYA courses and sailing instruction'
  }
];
---

<Layout title="Contact Us - South Caernarvonshire Yacht Club">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-navy-900 to-navy-700 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">
          Contact Us
        </h1>
        <p class="text-xl text-navy-100 max-w-3xl mx-auto">
          Get in touch with SCYC - we're here to help with all your sailing needs
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Details -->
        <div>
          <h2 class="text-3xl font-serif font-bold text-navy-900 mb-8">
            Get in Touch
          </h2>
          
          <div class="space-y-8">
            <!-- Address -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-navy-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-navy-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-navy-900 mb-2">Address</h3>
                <p class="text-gray-700">
                  {contactInfo.address.name}<br>
                  {contactInfo.address.street}<br>
                  {contactInfo.address.city}<br>
                  {contactInfo.address.postcode}
                </p>
                <p class="text-sm text-gray-500 mt-2">
                  Coordinates: {contactInfo.address.coordinates}
                </p>
              </div>
            </div>
            
            <!-- Phone -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-navy-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-navy-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-navy-900 mb-2">Phone</h3>
                <p class="text-gray-700">
                  <a href="tel:{contactInfo.phone}" class="hover:text-navy-700">
                    {contactInfo.phone}
                  </a>
                </p>
                <p class="text-sm text-gray-500 mt-1">
                  Emergency: <a href="tel:{contactInfo.emergency}" class="hover:text-navy-700">{contactInfo.emergency}</a>
                </p>
              </div>
            </div>
            
            <!-- Email -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-navy-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-navy-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-navy-900 mb-2">Email</h3>
                <p class="text-gray-700">
                  <a href="mailto:{contactInfo.email}" class="hover:text-navy-700">
                    {contactInfo.email}
                  </a>
                </p>
              </div>
            </div>
            
            <!-- Office Hours -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-navy-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-navy-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-bold text-navy-900 mb-2">Office Hours</h3>
                <p class="text-gray-700">{contactInfo.office_hours}</p>
                <p class="text-sm text-gray-500 mt-1">
                  Weekend hours may vary during sailing season
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div>
          <div class="bg-gray-50 rounded-lg p-8">
            <h2 class="text-2xl font-bold text-navy-900 mb-6">
              Send us a Message
            </h2>
            
            <form id="contact-form" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="first_name" class="block text-sm font-medium text-gray-700 mb-2">
                    First Name *
                  </label>
                  <input
                    type="text"
                    id="first_name"
                    name="first_name"
                    required
                    class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-navy-500 focus:border-navy-500"
                  />
                </div>
                
                <div>
                  <label for="last_name" class="block text-sm font-medium text-gray-700 mb-2">
                    Last Name *
                  </label>
                  <input
                    type="text"
                    id="last_name"
                    name="last_name"
                    required
                    class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-navy-500 focus:border-navy-500"
                  />
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email Address *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-navy-500 focus:border-navy-500"
                />
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Phone Number
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-navy-500 focus:border-navy-500"
                />
              </div>
              
              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                  Subject *
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-navy-500 focus:border-navy-500"
                >
                  <option value="">Select a subject</option>
                  <option value="general">General Enquiry</option>
                  <option value="membership">Membership Information</option>
                  <option value="racing">Racing & Competitions</option>
                  <option value="events">Events & Functions</option>
                  <option value="restaurant">The Cove Restaurant</option>
                  <option value="training">Sailing Training</option>
                  <option value="facilities">Facilities & Moorings</option>
                  <option value="other">Other</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-navy-500 focus:border-navy-500"
                  placeholder="Please provide details about your enquiry..."
                ></textarea>
              </div>
              
              <div class="flex items-start">
                <input
                  type="checkbox"
                  id="privacy_consent"
                  name="privacy_consent"
                  required
                  class="mt-1 mr-3 text-navy-600 focus:ring-navy-500"
                />
                <label for="privacy_consent" class="text-sm text-gray-700">
                  I consent to SCYC storing and processing my personal data to respond to this enquiry in accordance with the club's privacy policy.
                </label>
              </div>
              
              <button
                type="submit"
                id="submit-btn"
                class="w-full px-6 py-3 bg-navy-700 text-white font-medium rounded-md hover:bg-navy-800 focus:outline-none focus:ring-2 focus:ring-navy-500 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
              >
                <span class="submit-text">Send Message</span>
                <span class="loading-text hidden">Sending...</span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Department Contacts -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-serif font-bold text-navy-900 mb-4">
          Department Contacts
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          For specific enquiries, contact the relevant department directly
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {departments.map(dept => (
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <h3 class="text-lg font-bold text-navy-900 mb-2">{dept.name}</h3>
            <p class="text-gray-600 mb-4">{dept.description}</p>
            <a
              href={`mailto:${dept.email}`}
              class="text-navy-700 hover:text-navy-900 font-medium flex items-center"
            >
              <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {dept.email}
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-serif font-bold text-navy-900 mb-4">
          Find Us
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Located in the heart of Abersoch with easy access to Cardigan Bay
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="bg-navy-50 rounded-lg p-8">
            <h3 class="text-xl font-bold text-navy-900 mb-6">Directions</h3>
            
            <div class="space-y-6">
              <div>
                <h4 class="font-semibold text-navy-800 mb-2">By Car</h4>
                <ul class="text-gray-700 space-y-1">
                  <li>• From A499: Follow signs to Abersoch</li>
                  <li>• Turn onto Lon Sarn Bach</li>
                  <li>• Club entrance on the right</li>
                  <li>• Ample parking available</li>
                </ul>
              </div>
              
              <div>
                <h4 class="font-semibold text-navy-800 mb-2">By Public Transport</h4>
                <ul class="text-gray-700 space-y-1">
                  <li>• Bus service from Pwllheli</li>
                  <li>• Nearest train station: Pwllheli (15 minutes)</li>
                  <li>• Taxi services available</li>
                </ul>
              </div>
              
              <div>
                <h4 class="font-semibold text-navy-800 mb-2">By Sea</h4>
                <ul class="text-gray-700 space-y-1">
                  <li>• Visitor moorings available</li>
                  <li>• VHF Channel 37 for marina</li>
                  <li>• Fuel and water on pontoons</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        
        <div>
          <!-- Placeholder for map - in a real implementation, you'd integrate with Google Maps or similar -->
          <div class="bg-gray-200 rounded-lg h-96 flex items-center justify-center">
            <div class="text-center text-gray-500">
              <svg class="w-16 h-16 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <p class="text-lg font-medium">Interactive Map</p>
              <p class="text-sm">52°49.43'N, 04°269.89'W</p>
              <a
                href="https://maps.google.com/?q=52.8238,-4.4498"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block mt-4 px-4 py-2 bg-navy-700 text-white rounded-md hover:bg-navy-800 transition-colors"
              >
                Open in Google Maps
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Information -->
  <section class="py-16 bg-red-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-serif font-bold text-red-900 mb-4">
          Emergency Information
        </h2>
        <p class="text-lg text-red-700 max-w-3xl mx-auto">
          Important contact information for emergencies and safety
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
          <div class="bg-red-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-red-900 mb-3">Emergency Services</h3>
          <p class="text-red-700 mb-4">For life-threatening emergencies</p>
          <a href="tel:999" class="text-2xl font-bold text-red-600 hover:text-red-800">
            999
          </a>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
          <div class="bg-blue-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-navy-900 mb-3">Coastguard</h3>
          <p class="text-gray-700 mb-4">Maritime emergencies</p>
          <a href="tel:999" class="text-xl font-bold text-blue-600 hover:text-blue-800">
            999 (ask for Coastguard)
          </a>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
          <div class="bg-navy-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-navy-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-navy-900 mb-3">Club Emergency</h3>
          <p class="text-gray-700 mb-4">Club-related emergencies</p>
          <a href="tel:+441758712999" class="text-xl font-bold text-navy-600 hover:text-navy-800">
            +44 1758 712999
          </a>
        </div>
      </div>
      
      <div class="mt-8 text-center">
        <p class="text-red-700">
          <strong>VHF Radio:</strong> Monitor Channel 16 for emergencies, Club operations on Channel 37
        </p>
      </div>
    </div>
  </section>

  <!-- Success/Error Messages -->
  <div id="success-message" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-8 max-w-md mx-4">
      <div class="text-center">
        <svg class="mx-auto h-12 w-12 text-green-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Message Sent!</h3>
        <p class="text-gray-600 mb-6">
          Thank you for your message. We'll get back to you within 24 hours.
        </p>
        <button
          onclick="document.getElementById('success-message').classList.add('hidden')"
          class="px-6 py-2 bg-navy-700 text-white font-medium rounded-md hover:bg-navy-800"
        >
          Close
        </button>
      </div>
    </div>
  </div>

  <div id="error-message" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-8 max-w-md mx-4">
      <div class="text-center">
        <svg class="mx-auto h-12 w-12 text-red-500 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Sending Failed</h3>
        <p class="text-gray-600 mb-6" id="error-text">
          There was an error sending your message. Please try again.
        </p>
        <button
          onclick="document.getElementById('error-message').classList.add('hidden')"
          class="px-6 py-2 bg-navy-700 text-white font-medium rounded-md hover:bg-navy-800"
        >
          Try Again
        </button>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Form submission handling
  document.getElementById('contact-form').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const submitBtn = document.getElementById('submit-btn');
    const submitText = submitBtn.querySelector('.submit-text');
    const loadingText = submitBtn.querySelector('.loading-text');
    
    // Show loading state
    submitBtn.disabled = true;
    submitText.classList.add('hidden');
    loadingText.classList.remove('hidden');
    
    try {
      // Collect form data
      const formData = new FormData(this);
      const data = Object.fromEntries(formData.entries());
      
      // Add timestamp
      data.submitted_at = new Date().toISOString();
      
      // In a real implementation, you would submit to your API
      // For demo purposes, we'll simulate a successful submission
      await new Promise(resolve => setTimeout(resolve, 2000));
      
      console.log('Contact form submitted:', data);
      
      // Show success message
      document.getElementById('success-message').classList.remove('hidden');
      
      // Reset form
      this.reset();
      
    } catch (error) {
      console.error('Error submitting form:', error);
      
      // Show error message
      document.getElementById('error-text').textContent = 
        error.message || 'There was an error sending your message. Please try again.';
      document.getElementById('error-message').classList.remove('hidden');
      
    } finally {
      // Reset button state
      submitBtn.disabled = false;
      submitText.classList.remove('hidden');
      loadingText.classList.add('hidden');
    }
  });
</script>